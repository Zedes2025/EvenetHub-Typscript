{
  "compilerOptions": {
    "target": "ES2019", // modern JS features like async/await, Map/Set
    "lib": ["DOM", "DOM.Iterable", "ES2019"], // includes Set, Map, WeakMap, Iterable
    "module": "ESNext", // for modern bundlers
    "moduleResolution": "bundler", // resolve node_modules imports
    "esModuleInterop": true, // allow default import from CommonJS modules
    "allowJs": true, // allow JS files in TS project
    "checkJs": false, // optional: skip checking JS files
    "jsx": "react-jsx", // React 18 JSX transform
    "strict": true, // enable strict type checking
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // donâ€™t output compiled files (just check)
    "skipLibCheck": true // skip type checking node_modules (prevents some @types errors)
  },
  "include": ["src"], // adjust if your code is elsewhere
  "exclude": ["node_modules"]
}
